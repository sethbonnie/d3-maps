doctype
html
  head
    title D3-Maps
    style.
      .x-axis path, .x-axis line {
        stroke: black;
        shape-rendering: crispEdges;
        fill: none;
      }

      .y-axis path, .y-axis line {
        stroke: black;
        shape-rendering: crispEdges;
        fill: none;
      }

      .x-axis text, .y-axis text {
        font-family: sans-serif;
        font-size: 11px;
      }

      h1 {
        font-family: sans-serif;
        font-weight: 300;
        font-size: 1.8em;
      }

      div.tooltip {
        color: #444;
        position: absolute;
        max-width: 200px;
        height: auto;
        padding: 5px;
        background-color: white;
        border-radius: 5px;
        box-shadow: 4px 4px 10px rgba(0,0,0,0.5);
        pointer-events: none; /* VERY IMPORTANT */
        font-family: sans-serif;
        font-size: 10px;
      }
